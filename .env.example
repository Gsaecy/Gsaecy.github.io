# AI自动化博客系统环境变量
# 复制此文件为 .env 并修改配置

# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 系统配置
SYSTEM_NAME=AI智汇观察
SYSTEM_VERSION=2.0
SYSTEM_LANGUAGE=zh-CN

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/system.log

# 数据存储
DATA_DIR=./data
LOG_DIR=./logs

# GitHub配置（用于自动部署）
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=Gsaecy/Gsaecy.github.io

# 可选：告警配置
SLACK_WEBHOOK_URL=
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=

# 可选：代理配置（如果需要）
HTTP_PROXY=
HTTPS_PROXY=